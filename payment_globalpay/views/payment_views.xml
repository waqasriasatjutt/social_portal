<odoo>
    <record id="view_payment_acquirer_globalpay_form" model="ir.ui.view">
        <field name="name">payment.acquirer.form.globalpay</field>
        <field name="model">payment.acquirer</field>
        <field name="arch" type="xml">
            <form string="Global Payments Configuration">
                <group>
                    <field name="provider"/>
                    <field name="globalpay_merchant_id"/>
                    <field name="globalpay_account_id"/>
                    <field name="globalpay_shared_secret"/>
                    <field name="globalpay_service_url"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
