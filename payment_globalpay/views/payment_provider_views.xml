<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">Global Payments Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position="inside">
                <group invisible="code != 'globalpay'">
                    <field name="globalpay_merchant_id"/>
                    <field name="globalpay_account_id"/>
                    <field name="globalpay_shared_secret" password="True"/>
                    <field name="globalpay_service_url"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
