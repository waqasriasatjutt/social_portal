<!-- views/payment_provider_views.xml -->
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">Global Payments Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position="inside">
                <group invisible="code != 'globalpay'">
                    <field name="globalpay_merchant_id" string="Merchant ID" required="code == 'globalpay' and state != 'disabled'"/>
                    <field name="globalpay_account_id" string="Account ID" required="code == 'globalpay' and state != 'disabled'"/>
                    <field name="globalpay_shared_secret" string="Shared Secret" required="code == 'globalpay' and state != 'disabled'" password="True"/>
                    <field name="globalpay_service_url" string="Service URL" required="code == 'globalpay' and state != 'disabled'"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
